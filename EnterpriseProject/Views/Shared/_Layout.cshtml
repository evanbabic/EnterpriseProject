<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - CreativeCanvas</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/EnterpriseProject.styles.css" asp-append-version="true" />
</head>

<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3 bg-dark">
			<div class="container-fluid">
				<a class="navbar-brand" asp-area="" asp-controller="Dashboard" asp-action="Index" style="color: white;">CreativeCanvas</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">

					<ul class="navbar-nav ms-auto">
						@if (User.Identity.IsAuthenticated)
						{
							<li class="nav-item dropdown">
								<a class="nav-link dropdown-toggle text-light" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
									Profile
								</a>
								<ul class="dropdown-menu" aria-labelledby="navbarDropdown">
									<li>
										<a class="dropdown-item" asp-controller="User" asp-action="Profile" asp-route-userId="@User.FindFirst(EnterpriseProject.Entities.User.ClaimType)!.Value">
											View Profile
										</a>
									</li>
									<li>
										<a class="dropdown-item" asp-controller="User" asp-action="EditProfile" asp-route-userId="@User.FindFirst(EnterpriseProject.Entities.User.ClaimType)!.Value">
											Edit Profile
										</a>
									</li>
								</ul>
							</li>
							<li class="nav-item dropdown">
								<a class="nav-link dropdown-toggle text-light" href="#" id="navbarDropdownProject" role="button" data-bs-toggle="dropdown" aria-expanded="false">Projects</a>
								<ul class="dropdown-menu" aria-labelledby="navbarDropdownProject">
									<li><a class="dropdown-item" asp-controller="Project" asp-action="ViewProjects">View Projects</a></li>
									<li><a class="dropdown-item" asp-controller="Project" asp-action="CreateProject">Create Project</a></li>
								</ul>
							</li>
							<li class="nav-item dropdown">
								<a class="nav-link dropdown-toggle text-light" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
									Hi, @User.Identity.Name
								</a>
								<ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
									<li>
										<a class="dropdown-item" asp-area="" asp-controller="Dashboard" asp-action="AccountSettings">Account Settings</a>
									</li>
									<li>
										<a class="dropdown-item text-danger" asp-area="" asp-controller="Dashboard" asp-action="Logout">Logout</a>
									</li>
								</ul>
							</li>

						}
						else
						{
							<li class="nav-item">
								<a class="nav-link text-light" asp-controller="Project" asp-action="ViewProjects">Public Projects</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-light" asp-area="" asp-controller="Dashboard" asp-action="Login">Login</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-light" asp-area="" asp-controller="Dashboard" asp-action="Register">Register</a>
							</li>
						}
					</ul>

				</div>
			</div>
		</nav>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer">
		<div class="text-center">
			<p>&copy; 2024 - CreativeCanvas</p>
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
