@model EnterpriseProject.Entities.Project

<h1>Create Project Page</h1>

<div class="container">
    <form method="post" enctype="multipart/form-data">
        <div class="form-group row">
            @Html.LabelFor(model => model.ProjectTitle, htmlAttributes: new { @class = "col-sm-2 col-form-label"})
            <div class="col-sm-10">
                @Html.EditorFor(model => model.ProjectTitle, new { htmlAttributes = new { @class = "form-control" }})
            </div>
        </div> 
        <br />

        <div class="form-group row">
            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", id = "Description" }})
            </div>
        </div> 
        <br />

        <div class="form-group row">
            <label for="projectImage" class="col-sm-2 col-form-label">Project Image</label>
            <div class="col-sm-10">
                <input type="file" class="form-control" id="projectImage" name="projectImage" accept="image/*" />
            </div>
        </div> 
        <br />


        <div class="form-group row">
            @Html.LabelFor(model => model.StartDate, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                @Html.EditorFor(model => model.StartDate, new { htmlAttributes = new { @class = "form-control", id = "StartDate" } })
            </div>
        </div> <br />

        <div class="form-group row">
            @Html.LabelFor(model => model.CompletedDate, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                @Html.EditorFor(model => model.CompletedDate, new { htmlAttributes = new { @class = "form-control", id = "CompletedDate" } })
            </div>
        </div> <br />

        <div class="form-group row">
            <div class="col-sm-2">Public Project?</div>
            <div class="col-sm-10">
                <div class="form-check">
                    @Html.CheckBoxFor(model => model.IsPublic, new { @class = "form-check-input" })
                </div>
            </div>
        </div>

        <div class="form-group-row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Create Project</button>
            </div>
        </div>

    </form>
</div>
