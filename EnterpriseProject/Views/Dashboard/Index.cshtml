@model EnterpriseProject.Entities.User

<h2>Welcome, @Model.UserName!</h2>

<div>
    <h3>Your Profile Details:</h3>
    <ul>
        <li><strong>Email:</strong> @Model.Email</li>
        <li><strong>About Me:</strong> @Model.AboutMe</li>
        <li><strong>Projects:</strong> @Model.Projects.Count</li>
        <li><strong>Resume:</strong> @(Model.Resume != null ? "Uploaded" : "Not Uploaded")</li>
    </ul>
</div>

<div>
    <h3>Your Projects:</h3>
    @if (Model.Projects.Any())
    {
        <ul>
            @foreach (var project in Model.Projects)
            {
                <li>
                    <strong>@project.ProjectTitle</strong>: @project.Description
                    <br />
                    <em>Started:</em> @project.StartDate.ToShortDateString()
                    @if (project.CompletedDate != DateTime.MinValue)
                    {
                        <em>, Completed:</em> @project.CompletedDate.ToShortDateString()
                    }
                </li>
            }
        </ul>
    }
    else
    {
        <p>You don't have any projects yet.</p>
    }
</div>

<a href="@Url.Action("Logout", "Dashboard")">Logout</a>

